<!DOCTYPE html>
<html lang="{{ site.lang }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <meta name="generator" content="{{ site.generator }}">
  <title>{{ title }} | {{ site.short_name }}</title>
  <meta name="title" content="{{ title }} | {{ site.short_name }}">
  <meta name='description' content='{{ description | default(site.description) }}' />
  <meta name='keywords' content='{{ keywords | default(site.keywords) }}' />
  <meta name='author' content='{{ site.author }}'>
  <meta name='robot' content='index, follow'>
  <link rel='canonical' href='{{ canonical | default(site.url) }}'>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}">
  <meta property="og:title" content="{{ title }} | {{ site.short_name }}">
  <meta property="og:description" content="{{ description | default(site.description) }}">
  <meta property="og:image" content="{{ oglarge | default(site.url + "/img/ogimage_large.png") }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="628">

  <meta property="og:image" content="{{ site.url }}/img/ogimage_squared.png">
  <meta property="og:image:height" content="512">
  <meta property="og:image:width" content="512">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:creator" content="@devbaraus">
  <meta property="twitter:url" content="{{ site.url }}">
  <meta property="twitter:title" content="{{ title }} | {{ site.short_name }}">
  <meta property="twitter:description" content="{{ description | default(site.description) }}">
  <meta property="twitter:image" content="{{ oglarge | default(site.url + "/img/ogimage_large.png") }}">

  <link rel="apple-touch-icon" href="/img/manifest-180.png">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="{{ site.theme_color }}" />
  <meta name="apple-mobile-web-app-title" content="{{ title }} | {{ site.short_name }}" />
  <meta name="theme-color" content="{{ site.theme_color }}">
  <meta name="ahrefs-site-verification" content="cb6819e426604349cf43a09354722cb49c008a0ca357838ab236fbda61cab5d0">

  <link rel="icon" type="image/x-icon" sizes="256x256" href="/favicon.ico">
  <link rel='manifest' href='/manifest.json'>
  <link rel="stylesheet" type="text/css" href="/css/main.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel='stylesheet' async href='https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Ubuntu:wght@700&display=swap'>
  {% block head %}{% endblock %}
  <script src="/js/main.js" defer></script>

  <script type="text/javascript">
      (function(c,l,a,r,i,t,y){
          c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
          t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
          y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "bbid7ek34f");
  </script>

</head>
<body>
{% include 'header.njk' %}
<main class='py-12'>
  {% block body %}
    {{ content | safe }}
  {% endblock %}
</main>
{% include 'footer.njk' %}
<div
  id="copy-message"
  style='left: calc(50vw - 6rem);'
  class="fixed flex h-16 w-48 -top-24 justify-center items-center cursor-pointer transition-all duration-200 ease-in bg-dark z-50 rounded-b"
>
</div>
</body>
</html>
